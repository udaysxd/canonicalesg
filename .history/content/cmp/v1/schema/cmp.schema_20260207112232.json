{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://canonicalesg.org/schemas/cmp.schema.json",
  "title": "Canonical Mapping Pack (CMP) Schema",
  "description": "Schema for representing Canonical Mapping Packs (CMPs). CMPs document non-authoritative interpretations of Canonical Disclosure Intents (CDIs) across reporting frameworks.",
  "type": "object",
  "required": ["cmp"],
  "properties": {
    "cmp": {
      "type": "object",
      "required": [
        "metadata",
        "scope",
        "mappings",
        "limitations",
        "version_history"
      ],
      "properties": {

        "metadata": {
          "type": "object",
          "required": [
            "cmp_id",
            "title",
            "version",
            "status",
            "publication_date",
            "maintainer",
            "license",
            "cdi_version",
            "cmp_type"
          ],
          "properties": {

            "cmp_id": { "type": "string" },
            "title": { "type": "string" },
            "version": { "type": "string" },

            "status": {
              "type": "string",
              "enum": ["draft", "illustrative", "frozen", "deprecated"]
            },

            "publication_date": {
              "type": "string",
              "format": "date"
            },

            "maintainer": { "type": "string" },
            "license": { "type": "string" },
            "cdi_version": { "type": "string" },

            "cmp_type": {
              "type": "string",
              "enum": ["topic", "jurisdiction"],
              "description": "Indicates whether this CMP covers a sustainability topic or a specific legal/regulatory jurisdiction."
            },

            "jurisdiction": {
              "type": "object",
              "description": "Required when cmp_type is 'jurisdiction'. Describes the legal jurisdiction covered.",
              "required": ["name", "region"],
              "properties": {
                "name": { "type": "string" },
                "region": { "type": "string" },
                "authority": { "type": "string" }
              },
              "additionalProperties": false
            },

            "legal_status": {
              "type": "string",
              "enum": [
                "voluntary",
                "mandatory",
                "mixed",
                "regulatory",
                "recommended"
              ]
            },

            "regulatory_basis": {
              "type": "string"
            }

          },
          "additionalProperties": false
        },

        "scope": {
          "type": "object",
          "required": ["topic", "covered_cdis", "frameworks", "intended_use"],
          "properties": {

            "topic": { "type": "string" },

            "covered_cdis": {
              "type": "array",
              "items": { "type": "string" },
              "minItems": 1
            },

            "frameworks": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["name", "version"],
                "properties": {
                  "name": { "type": "string" },
                  "version": { "type": "string" }
                },
                "additionalProperties": false
              }
            },

            "intended_use": { "type": "string" }

          },
          "additionalProperties": false
        },

        "interpretation_principles": {
          "type": "array",
          "items": { "type": "string" }
        },

        "mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["cdi_id", "cdi_name", "intent", "framework_mappings"],
            "properties": {

              "cdi_id": { "type": "string" },
              "cdi_name": { "type": "string" },
              "intent": { "type": "string" },

              "framework_mappings": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": [
                    "framework",
                    "framework_version",
                    "reference",
                    "mapping_type"
                  ],
                  "properties": {

                    "framework": { "type": "string" },
                    "framework_version": { "type": "string" },
                    "reference": { "type": "string" },

                    "mapping_type": {
                      "type": "string",
                      "enum": [
                        "full",
                        "partial",
                        "contextual",
                        "not_applicable"
                      ]
                    },

                    "interpretation_notes": { "type": "string" }

                  },
                  "additionalProperties": false
                }
              }

            },
            "additionalProperties": false
          }
        },

        "cross_framework_observations": {
          "type": "array",
          "items": { "type": "string" }
        },

        "limitations": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },

        "version_history": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["version", "date", "status", "summary"],
            "properties": {

              "version": { "type": "string" },

              "date": {
                "type": "string",
                "format": "date"
              },

              "status": {
                "type": "string",
                "enum": ["draft", "frozen", "deprecated"]
              },

              "summary": {
                "type": "array",
                "items": { "type": "string" }
              }

            },
            "additionalProperties": false
          }
        }

      },

      "allOf": [
        {
          "if": {
            "properties": {
              "metadata": {
                "properties": {
                  "cmp_type": { "const": "jurisdiction" }
                }
              }
            }
          },
          "then": {
            "properties": {
              "metadata": {
                "required": ["jurisdiction"]
              },
              "mappings": {
                "minItems": 0
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "metadata": {
                "properties": {
                  "cmp_type": { "const": "topic" }
                }
              }
            }
          },
          "then": {
            "properties": {
              "mappings": {
                "minItems": 1
              }
            }
          }
        }
      ],

      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
