{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://canonicalesg.org/schemas/cmp.schema.json",
  "title": "Canonical Mapping Pack (CMP) Schema",
  "description": "Schema for representing Canonical Mapping Packs (CMPs). CMPs document non-authoritative interpretations of Canonical Disclosure Intents (CDIs) across reporting frameworks.",
  "type": "object",
  "required": ["cmp"],
  "additionalProperties": false,

  "properties": {
    "cmp": {
      "type": "object",
      "required": [
        "metadata",
        "scope",
        "mappings",
        "limitations",
        "version_history"
      ],
      "additionalProperties": false,

      "properties": {

        "metadata": {
          "type": "object",
          "required": [
            "cmp_id",
            "title",
            "version",
            "status",
            "publication_date",
            "maintainer",
            "license",
            "cdi_version",
            "cmp_type"
          ],
          "additionalProperties": false,

          "properties": {

            "cmp_id": {
              "type": "string",
              "minLength": 1
            },

            "title": {
              "type": "string",
              "minLength": 1
            },

            "version": {
              "type": "string",
              "minLength": 1
            },

            "status": {
              "type": "string",
              "enum": ["draft", "illustrative", "frozen", "deprecated"]
            },

            "publication_date": {
              "type": "string",
              "format": "date"
            },

            "maintainer": {
              "type": "string",
              "minLength": 1
            },

            "license": {
              "type": "string",
              "minLength": 1
            },

            "cdi_version": {
              "type": "string",
              "minLength": 1
            },

            "cmp_type": {
              "type": "string",
              "enum": [
                "topic",
                "cross_framework",
                "jurisdiction"
              ],
              "description": "Indicates whether this CMP covers a sustainability topic, a global cross-framework baseline, or a legal jurisdiction."
            },

            "jurisdiction": {
              "type": "object",
              "description": "Required when cmp_type is 'jurisdiction'.",
              "required": ["name", "region"],
              "additionalProperties": false,
              "properties": {
                "name": { "type": "string", "minLength": 1 },
                "region": { "type": "string", "minLength": 1 },
                "authority": { "type": "string" }
              }
            },

            "legal_status": {
              "type": "string",
              "enum": [
                "voluntary",
                "mandatory",
                "mixed",
                "regulatory",
                "recommended"
              ]
            },

            "regulatory_basis": {
              "type": "string"
            }

          }
        },

        "scope": {
          "type": "object",
          "required": ["topic", "covered_cdis", "frameworks", "intended_use"],
          "additionalProperties": false,

          "properties": {

            "topic": {
              "type": "string",
              "minLength": 1
            },

            "covered_cdis": {
              "type": "array",
              "minItems": 1,
              "items": { "type": "string", "minLength": 1 }
            },

            "frameworks": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": ["name", "version"],
                "additionalProperties": false,
                "properties": {
                  "name": { "type": "string", "minLength": 1 },
                  "version": { "type": "string", "minLength": 1 }
                }
              }
            },

            "intended_use": {
              "type": "string",
              "minLength": 1
            }

          }
        },

        "interpretation_principles": {
          "type": "array",
          "items": { "type": "string" }
        },

        "mappings": {
          "type": "array",
          "items": {
            "type": "object",
            "required": [
              "cdi_id",
              "cdi_name",
              "intent",
              "framework_mappings"
            ],
            "additionalProperties": false,

            "properties": {

              "cdi_id": { "type": "string", "minLength": 1 },
              "cdi_name": { "type": "string", "minLength": 1 },
              "intent": { "type": "string", "minLength": 1 },

              "framework_mappings": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "object",
                  "required": [
                    "framework",
                    "framework_version",
                    "reference",
                    "mapping_type"
                  ],
                  "additionalProperties": false,
                  "properties": {

                    "framework": { "type": "string", "minLength": 1 },
                    "framework_version": { "type": "string", "minLength": 1 },
                    "reference": { "type": "string", "minLength": 1 },

                    "mapping_type": {
                      "type": "string",
                      "enum": [
                        "full",
                        "partial",
                        "contextual",
                        "not_applicable"
                      ]
                    },

                    "interpretation_notes": {
                      "type": "string"
                    }

                  }
                }
              }

            }
          }
        },

        "cross_framework_observations": {
          "type": "array",
          "items": { "type": "string" }
        },

        "limitations": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string" }
        },

        "version_history": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "object",
            "required": ["version", "date", "status", "summary"],
            "additionalProperties": false,
            "properties": {

              "version": { "type": "string", "minLength": 1 },

              "date": {
                "type": "string",
                "format": "date"
              },

              "status": {
                "type": "string",
                "enum": ["draft", "frozen", "deprecated"]
              },

              "summary": {
                "type": "array",
                "minItems": 1,
                "items": { "type": "string" }
              }

            }
          }
        }

      },

      "allOf": [

        {
          "if": {
            "properties": {
              "metadata": {
                "properties": {
                  "cmp_type": { "const": "jurisdiction" }
                }
              }
            }
          },
          "then": {
            "properties": {
              "metadata": {
                "required": ["jurisdiction"]
              }
            }
          }
        },

        {
          "if": {
            "properties": {
              "metadata": {
                "properties": {
                  "cmp_type": { "const": "topic" }
                }
              }
            }
          },
          "then": {
            "properties": {
              "mappings": {
                "minItems": 1
              }
            }
          }
        },

        {
          "if": {
            "properties": {
              "metadata": {
                "properties": {
                  "cmp_type": { "const": "cross_framework" }
                }
              }
            }
          },
          "then": {
            "properties": {
              "mappings": {
                "minItems": 1
              }
            }
          }
        }

      ]
    }
  }
}
